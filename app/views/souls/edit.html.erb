<h1>Update</h1>

<%= form_for @soul do |f| %>
    <% if @soul.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @soul.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div><br />
    <div>
      <%= f.label :second_name %><br />
      <%= f.text_field :second_name %>
    </div><br />
    <div>
      <%= f.label :pname %><br />
      <%= f.text_field :pname %>
    </div><br />
    <div>
      <%= f.label :old %><br />
      <%= f.number_field :old %>
    </div><br />
    <div>
      <%= f.label :price %><br />
      <%= f.number_field :price %>
    </div><br />
    <div>
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div><br />
    <div>
      <%= f.label :describe %><br />
      <%= f.text_area :describe %>
    </div><br />
    <div>
      <%= f.label :status %><br />
      <%= select_tag :status, options_for_select([ "Free", "Busy" ], "Free") %>
    </div><br />
    <div class="button"><%= f.submit %></div>
<% end %>