<div>
	<div class="header2">Мертва душа</div>
	<br/>
    <% if @souls.id == current_user.id %>
        <%= link_to 'Edit info', edit_soul_path(current_user.id) %>
    <% end %>
	<br/>
	<div class="shot_info">
        <table class="tab">
            <tr>
                <td rowspan="8" width="40%"><p><%= image_tag('product_blank.gif', width: "250px", alt: "photo lairds") %></p></td>
                <td width="100px" ><h4>Прізвище: </h4></td>
                <td width="150px" align="right"><%= @souls.second_name%></td>
            </tr>
            <tr>
                <td><h4>Ім'я: </h4></td>
                <td><%= @souls.name %></td>
            </tr>
            <tr>
                <td><h4>По-батькові: </h4></td>
                <td><%= @souls.pname %></td>
            </tr>
            <tr>
                <td><h4>Вік: </h4></td>
                <td><%= @souls.old %></td>
            </tr>
            <tr>
                <td><h4>Спеціальність: </h4></td>
                <td><%= @souls.category_id %></td>
            </tr>
            <tr>
                <td><h4>Заробітня плата: </h4></td>
                <td><%= @souls.price %></td>
            </tr>
            <tr>
                <td><h4>Телефон: </h4></td>
                <td><%= @souls.phone %></td>
            </tr>
            <tr>
                <td><h4>email: </h4></td>
                <td><%= @souls.email %></td>
            </tr>
            <tr>
                <td><h4>status: </h4></td>
                <td><%= @souls.status %></td>
            </tr>
        </table>
	</div>

	<div class="full_info">
		<%= @souls.describe %>
	</div>
</div>
