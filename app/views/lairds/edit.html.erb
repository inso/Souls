<h1>Update</h1>

<%= form_for @laird do |f| %>
    <% if @laird.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @laird.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div><br />
    <div>
      <%= f.label :category_id %><br />
      <%= select('categories', 'id', Category.all.collect {|c| [c.name, c.id] } ) %>
    </div><br />
    <div>
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div><br />
    <div>
      <%= f.label :describe %><br />
      <%= f.text_area :describe %>
    </div><br />
    <div class="button"><%= f.submit %></div>
<% end %>