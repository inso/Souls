<% provide(:title, 'Laird') %>
<div class="category">
		<%= render '/lairds/menu'%>
</div>
<div class="info">
	<div class="header2">Поміщики</div>
	<br/>
	<div class="souls">
		<% @lairds.each do |laird| %>
			<div class="soul grid_3">
			<div style="min-height:150px">
				<%= link_to image_tag(laird.image_url || "product_blank.gif", :alt => "home image"), laird%>
			</div>	
				<div>
					<%= link_to laird.full_name, laird%>
				</div>
			</div>	
		<%end%>
	</div>
</div>	