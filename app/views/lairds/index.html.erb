<% provide(:title, 'Laird') %>
<div class="category">
		<% Category.all.each do |laird| %>
			<div>	
				<%= link_to laird.name, lairds_index_path(category: laird.id) %>
			</div>
		<%end%>
</div>
<div class="info">
	<div class="header2">Поміщики</div>
	<br/>
	<div class="souls">
		<% @lairds.each do |laird| %>
			<div class="soul grid_3">
			<div style="min-height:150px">
				<%= link_to image_tag(laird.image || "product_blank.png", :alt => "home image")%>
			</div>	
				<div>
					<%= laird.full_name%>
				</div>
			</div>	
		<%end%>
	</div>
</div>	